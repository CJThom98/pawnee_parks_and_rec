<section>
  <h2>Create New Post for Parks and Recreation</h2>

  <form class='complaint-form'>
    <div>
      <label for='post-complaint'>Complaint</label>
      <input type='text' id='post-complaint' name='post-complaint' />
    </div>
    <button type='submit' class='btn'>Create</button>
  </form>
</section>

{{#if posts.length}}
  <section>
    <h2>Complaints</h2>
    <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      {{!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}
    </li>
    {{/each}}
  </ol>
  </section>
{{/if}}

<script src='/javascript/add-post.js'></script>